{
  "manifest_version": 3,
  "name": "TrippyPedia",
  "version": "1.6.1",
  "description": "A premium, distraction-free vocabulary companion.",
  "permissions": ["storage","activeTab","scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ],
  "action": { "default_popup": "library.html" },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}